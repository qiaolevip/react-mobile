@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea 
  color: $black

*
  margin 0
  padding 0
  box-sizing: border-box;

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

ul
  list-style none
  
body
  color: $black
  font-size: 1em
  line-height: 1.5

.text-center
  text-align center
    
.container
  .header
    padding: .5em 0;
    text-align: center;

    h1
      font-size: 34px;
      color: #3cc51f;
      font-weight: 400;
      margin: 0 15%;

    p
      color: #888;
      font-size: 14px;

  .footer
    position: fixed;
    overflow: hidden;
    bottom: 0;
    left: 0;
    z-index: 50;
    width: 100%;
    height: 44px;
    line-height: 44px;
    color: #696969;
    background-image: -webkit-linear-gradient(rgba(14,14,14,0) 0, #dedede 100%);

    .back
      position: absolute;
      top: 0;
      display: block;
      padding: 3px 16px;

      span
        &:after
          content: '< 返回';

  .photo-list-container
    overflow: hidden;
    margin: 0 .5em;
    text-align center

    li
      float: left;
      position: relative;
      width: 32%;
      margin-bottom: 2%;
      overflow: hidden;

      a
        display: block;
        width: 100%;

        img
          vertical-align: middle;
          width: 100%;
          height: 130px;

        span
          position: absolute;
          width: 100%;
          left: 0;
          bottom: 0;
          color: #fff;
          line-height: 25px;
          text-indent: 10px;
          font-size: 14px;
          background-image: -webkit-linear-gradient(rgba(14,14,14, 0) 0, rgba(14,14,14, 1) 100%);

  .person-info-container
    margin-bottom: 44px;

    .person-img
      overflow: hidden;
      text-align: center;
      display: block;
      padding: 10px 15px 0;
      box-shadow: 0 1px 3px rgba(34, 25, 25, .4);

    .person-card
      margin: 0 15px;
      padding: 1em 0;
      border-bottom: 1px solid #dedede;

      .title
        border-left: 2px solid #459df5;
        padding-left: 8px;

        .lemma-title
          color: #252525;
          font-weight: 700;

    .base-info
      margin: 1em;
      line-height: 1.5;

      li
        line-height: 1.8em;

        .info-title
          float: left;
          color: #444;

        .info-content
          margin-left: 5em;
          color: #666;
          word-break: break-all;
          word-wrap: break-word;